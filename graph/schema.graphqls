

type Query {
  getSamples: [WritingSample]!
}

# Writing samples
input CreateWritingSampleInput {
  title: String!
  content: String!
}

type WritingSample {
  id: ID!
  title: String!
  content: String!
}

input PerformanceInput {
  sampleId: String!
  timeToComplete: Float!
  accuracy: Float!
  wpm: Float!
}

type Mutation {
  createWritingSample(input: CreateWritingSampleInput!): WritingSample!
  recordUserPerformance(input: PerformanceInput!): Boolean!
}
